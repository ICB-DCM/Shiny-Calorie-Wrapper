{
  "name": "my-electron-shiny-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "PYTHON=/usr/bin/python3 electron .",
    "build": "PYTHON=/usr/bin/python3 electron-builder --publish never",
    "build-linux": "electron-builder --linux snap AppImage --publish never",
    "build-win": "electron-builder --win nsis --publish never"
  },
  "build": {
    "appId": "com.example.myshinyapp",
    "productName": "MyElectronShinyApp",
    "files": [
      "main.js",
      "index.html",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
       "minimumSystemVersion": "11.0"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^25.1.8",
    "node-gyp": "^10.2.0"
  },
  "dependencies": {
    "dockerode": "^4.0.2",
    "sudo-prompt": "^9.2.1"
  }
}
